{
  "app": {
    "name": "Effortless bible analysis",
    "version":"0.0.4",
    "build": "1.0.0",
    "description":"This is not the entire bible. This is the bible analysis according to topics. Thus it helps to search, check and study the scriptures. Please be advised, read the bible book to meditate.",
    "author":"tuang",
    "dist": {
      "file": {
        "lang": {
          "([A-Z]|\\d)": false
        }
      }
    },
    "dev": {
      "lib": "js"
    }
  },
  "individual": {
    "chrome": {
      "dev": {},
      "dist": {}
    },
    "ios": {
      "dev": {},
      "dist": {}
    },
    "android": {
      "dev": {},
      "dist": {}
    },
    "default": {
      "dev": {},
      "dist": {}
    },
    "web": {
      "dev": {},
      "dist": {
        "file": {
          "lib": {
            "(localforage|google|ui)": false
          }
        }
      }
    },
    "electron": {
      "dev": {},
      "dist": {}
    }
  },
  "gulp": {
    "sass":{
      "debugInfo": true,
      "lineNumbers": false,
      "errLogToConsole": true,
      "outputStyle": "compact"
    },
    "js":{
      "output":{
        "beautify": false, 
        "comments":"license"
      },
      "compress":true,
      "preserveComments":"license"
    },
    "custom": {
      "fileStorage": {
        "source":"../scriptive.filestorage/asset/filestorage/fileStorage.js",
        "target":["dev/js"],
        "pipe":{
          "gulp-include":{},
          "gulp-uglify":{
            "mangle":false,
            "output":{
              "beautify": false, 
              "comments":"license"
            },
            "compress":true,
            "preserveComments":"license"
          },
          "gulp-concat":"filestorage.min.js"
        },
        "watch":"../scriptive.filestorage/asset/filestorage/*.js"
      },
      "apps.script.css": {
        "source":"asset/apps.script/*([^A-Z0-9-]).scss",
        "target":"apps.script",
        "pipe":{
          "gulp-sass":{
            "style": "compressed"
          }
        }
      },
      "apps.script.js": {
        "source":"asset/apps.script/*([^A-Z0-9-]).js",
        "target":"apps.script",
        "pipe":{
          "gulp-include":{},
          "gulp-uglify":{
            "mangle":false,
            "output":{
              "beautify": true, 
              "comments":"license"
            },
            "compress":true,
            "preserveComments":"license"
          }
        },
        "watch":"asset/apps.script/*.js"
      }
    }
  }
}